extends ../base
include ../mixins/video

block content
    //- User.js 모델에서 옴
    div.profile__data
        if user.avatarUrl
            img.avatar(src= user.avatarUrl, crossorigin="use-credentials")
            h3=user.name
        else
            span 😀
            div
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found